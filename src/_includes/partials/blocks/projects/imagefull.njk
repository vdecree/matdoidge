<section class="image-full [ pane ]" style="background-color: #{{ block.background }}">
    <div class="wrapper">
        <div class="grid [ lg:grid-cols-12 ]">
            <div class="image-full__wrap [ lg:col-start-2 lg:col-span-10 drop-shadow-xl ]">
                <img class="rounded-lg" src="{{ block.image }}" alt="{{ block.alt }}">
            </div>
        </div>
    </div>
</section>
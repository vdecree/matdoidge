<section class="intro [ pane bg-white ]">
    <div class="wrapper [ max-w-7xl ]">
        <div class="grid [ lg:grid-cols-3 gap-800 ]">
            <div class="intro__icon">
                <img src="{{ block.image }}" alt="{{ block.alt }}">
            </div>
            <div class="intro__text [ lg:col-span-2 ]">
                <div class="flow">
                    {# <p class="eyebrow [ color-primary ]">{{ block.eyebrow }}</p> #}
                    <h2>{{ block.title }}</h2>
                    {{ block.content | markdown | safe }}
                    <a class="button" data-type="secondary" href="{{ block.button.link }}">{{ block.button.text }}</a>
                </div>
            </div>
        </div>
    </div>
</section>